@model IEnumerable<WebApplication1.Models.AP_Menu>
@*@{
        string img = Session["pic"].ToString();
    }*@


<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a class="logo" href="#">
                            @*<img src="~/Content/Main_Menu/images/logo.PNG" />*@
                            @*@Html.Partial("~/Views/Shared/logo.cshtml")*@
                            <h3>Tajweed Essential</h3>
                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        @ShowMenu(Model)
                        <li>
                            <button class="item" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("logout", "Login")'">
                                <i class="zmdi zmdi-logout"></i> logout
                            </button>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo text-center">
                <a href="#" class="text-center">

                    @*<img src="~/Content/Main_Menu/images/logo.PNG" />*@
                    @*@Html.Partial("~/Views/Shared/logo.cshtml")*@
                    <h3>Tajweed Essential</h3>
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
                    <ul class="list-unstyled navbar__list">
                        @ShowMenu(Model)
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <header class="header-desktop" id="logout-hide">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <form class="form-header" action="" method="POST" style="visibility:hidden;">
                                <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <div class="header-button">
                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">
                                        <button class="item" data-toggle="tooltip" data-placement="top" onclick="location.href='@Url.Action("logout", "Login")'">
                                            <i class="zmdi zmdi-logout"></i> logout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            @RenderBody()
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    @helper ShowMenu(IEnumerable<WebApplication1.Models.AP_Menu> menuList)
    {
foreach (var s in menuList)
{
        <li class="@(s.List.Any()?"dropdown":"") active has-sub">
            @if (s.List.Any())
            {
                <a class="js-arrow" href="#">
                    @s.Menu_name <span class="arrow"><i class="fas fa-angle-down"></i></span>
                </a>

                <ul class="list-unstyled navbar__sub-list js-sub-list">
                    @ShowMenu(s.List)
                </ul>
            }
            else
            {
                <a href="http://localhost:62056/@s.Menu_URL">
                    @s.Menu_name
                </a>
            }
        </li>
}
}


