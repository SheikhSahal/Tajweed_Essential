
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Report.cshtml";
}
<div class="card">
    <div class="card-header text-center">
        <strong class="card-title">From Date : @ViewBag.From_date.ToString("dd-MM-yyyy") &nbsp;&nbsp; To Date: @ViewBag.to_date.ToString("dd-MM-yyyy") <br />
         Attendance Report</strong>
    </div>

    <div class="card-body">
        <div class="typo-headers">
            <h4 class="pb-2 display-5">Course Name :</h4>
        </div>
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr>
                            <td><b>Student ID</b></td>
                            <td><b>Student Name</b></td>
                            <td><b>Attendance Status</b></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var s in ViewBag.Att_Report as List<WebApplication1.Models.Att_Report>)
                    {
                        <tr>
                            <td>@s.stud_id</td>
                            <td>@s.Stud_name</td>
                            @if (s.att_status == 'P'.ToString())
                            {
                                <td>Present</td>
                            }
                        </tr>
                    }
                    @foreach (var s in ViewBag.att_report_ab as List<WebApplication1.Models.Att_Report>)
                    {
                        <tr>
                            <td>@s.stud_id</td>
                            <td>@s.Stud_name</td>
                            @if (s.att_status == 'A'.ToString())
                            {
                                <td>Absent</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>
</div>