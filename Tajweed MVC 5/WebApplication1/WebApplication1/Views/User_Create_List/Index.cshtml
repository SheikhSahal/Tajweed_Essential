@model List<WebApplication1.Models.AP_Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div id="message" class="sufee-alert alert with-close alert-success alert-dismissible fade show message">
            <span id="alt-msge">
                You have successfully Update the record.
            </span>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <!-- DATA TABLE -->
                    <h3 class="title-5 m-b-35">All Users</h3>
                    <div class="table-data__tool">
                        <div class="table-data__tool-left" style="visibility:hidden;">
                            <div class="rs-select2--light rs-select2--md">
                                <select class="js-select2" name="property">
                                    <option selected="selected">All Properties</option>
                                    <option value="">Option 1</option>
                                    <option value="">Option 2</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <div class="rs-select2--light rs-select2--sm">
                                <select class="js-select2" name="time">
                                    <option selected="selected">Today</option>
                                    <option value="">3 Days</option>
                                    <option value="">1 Week</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                            <button class="au-btn-filter">
                                <i class="zmdi zmdi-filter-list"></i>filters
                            </button>
                        </div>
                        <div class="table-data__tool-right">
                            <a href="@Url.Action("Index","User_Create")" class="au-btn au-btn-icon au-btn--green au-btn--small">
                                <i class="zmdi zmdi-plus"></i>Add User
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive table-responsive-data2">
                        <table class="table table-data2">
                            <thead>
                                <tr>
                                    <th>S/No.</th>
                                    <th>Users Name</th>
                                    <th>E-mail</th>
                                    <th>Role</th>
                                    <th>Active</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int index = 1;}
                                @foreach (var s in ViewBag.all_users as List<WebApplication1.Models.Registor>)
                                {
                                    <tr class="tr-shadow">
                                        <td>@index</td>
                                        <td class="bh_id collapse">@s.User_id</td>
                                        <td>@s.Full_Name</td>
                                        <td>@s.email</td>
                                        <td>@s.Role_name</td>
                                        @if (s.User_Active == 'Y'.ToString())
                                        {
                                            <td>
                                                    <input type="checkbox" id="hide" name="hide" checked>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                    <input type="checkbox" id="hide" name="hide">
                                            </td>
                                        }
                                        <td>
                                            <button id="save" class="btn btn-sm btn-info btn-block save">
                                                <i class="fas fa-save"></i>&nbsp;
                                            </button>
                                        </td>
                                    </tr>
                                    index++;
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- END DATA TABLE -->
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .message {
        display: none;
        position: fixed;
        z-index: 1;
        left: 40%;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.save').click(function () {

            var row = $(this).parent().parent("tr");
            var findval = row.find('input[name="hide"]');
            var bh_val = row.find('.bh_id').text();

            var checkboxvale = null;
            if ((findval).is(":checked"))
            {
                checkboxvale = 'Y';
            }
            else {
                checkboxvale = 'N';
            }

            debugger
            $.ajax({
                type: 'POST',
                url: '/User_Create_List/Index',
                data: {
                    'usr_id': bh_val,
                    'user_active': checkboxvale,
                },
                success: function (resp) {
                    if (resp.status) {
                        $('.message').delay(300).fadeIn();
                        $('.message').delay(200).fadeOut();

                    }
                    else {
                        alert('error');
                    }
                }
            });


        })

    });
</script>