@model List<WebApplication1.Models.AP_Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">overview</h2>
                    </div>
                </div>
            </div>
            @if (Convert.ToInt32(Session["Role_id"]) == 1)
            {

                <div class="row m-t-25">
                    <div class="col-sm-6 col-lg-3">
                        <div class="overview-item overview-item--c1">
                            <div class="overview__inner">
                                <div class="overview-box clearfix">
                                    <div class="icon">
                                        <i class="fa fa-gavel fa-6x" aria-hidden="true"></i>
                                    </div>
                                    <div class="text">
                                        @*<h2>@ViewBag.bid_count</h2>*@
                                        <span>Bid</span>
                                    </div>
                                </div>
                                <div class="overview-chart">
                                    <canvas id="widgetChart1"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="overview-item overview-item--c2">
                            <div class="overview__inner">
                                <div class="overview-box clearfix">
                                    <div class="icon">
                                        <i class="fas fa-box-open fa-6x" aria-hidden="true"></i>
                                    </div>
                                    <div class="text">
                                        @*<h2>@ViewBag.bid_prod</h2>*@
                                        <span>Post</span>
                                    </div>
                                </div>
                                <div class="overview-chart">
                                    <canvas id="widgetChart2"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="overview-item overview-item--c3">
                            <div class="overview__inner">
                                <div class="overview-box clearfix">
                                    <div class="icon">
                                        <i class="fas fa-comment-dollar fa-6x" aria-hidden="true"></i>
                                    </div>
                                    <div class="text">
                                        @*<h2>@ViewBag.bid_saleprod</h2>*@
                                        <span>Sold Product</span>
                                    </div>
                                </div>
                                <div class="overview-chart">
                                    <canvas id="widgetChart3"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-3">
                        <div class="overview-item overview-item--c4">
                            <div class="overview__inner">
                                <div class="overview-box clearfix">
                                    <div class="icon">
                                        <i class="zmdi zmdi-money"></i>
                                    </div>
                                    <div class="text">
                                        @*<h2>@ViewBag.earn</h2>*@
                                        <span>total earnings</span>
                                    </div>
                                </div>
                                <div class="overview-chart">
                                    <canvas id="widgetChart4"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>
                            <tr>
                                <th>S/No.</th>
                                <th>Course</th>
                                <th>Teacher</th>
                                <th>Password</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int idx = 1; }
                            @foreach (var s in ViewBag.attendnce as List<WebApplication1.Models.Attendance_data>)
                            {
                                <tr>
                                    <td>@idx</td>
                                    <td>@s.Batch_name</td>
                                    <td>@s.Teach_name</td>
                                    <td class="pass"><input type="password" id="pass" class="form-control"/></td>
                                    <td>
                                        <button class="item btn btn-primary" data-toggle="tooltip" data-placement="top" id="submit" onclick="location.href='@Url.Action("DeleteRecord", "Course_List", new { id = s.att_id, pass="psl" })'">
                                            Submit
                                        </button>
                                    </td>
                                </tr>
                                idx++;
                            }
                        </tbody>
                    </table>
                </div>
                                }
            @Html.Partial("~/Views/Shared/Footer.cshtml")
        </div>
    </div>
</div>
<style>
    span.error {
        display: none;
        color: #d93025;
        font-size: 80%;
        margin-top: 3px;
    }
    #submit{
        display:none;
    }
</style>


